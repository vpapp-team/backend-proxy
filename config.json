{
	"general": {
		"acceptHttp": false,
		"registration": {
			"host": "proxy.nigb.app",
			"method": "CONNECT",
			"url": "/login"
		},
		"broadcast": {
			"host": "broadcast.nigb.app",
			"method": "POST",
			"url": "/"
		},
		"maxServerAge": 300000,
		"httpPorts": [80],
		"httpsPorts": [443],
		"SECURE_CONTEXT": {
		  "key": "/etc/letsencrypt/live/nigb.app/privkey.pem",
		  "cert": "/etc/letsencrypt/live/nigb.app/cert.pem",
		  "ca": "/etc/letsencrypt/live/nigb.app/fullchain.pem"
		},
		"publicKey": "./publicKey.pem"
	},
	"templates": {
		"endpoints": {
			"host": "@",
			"keepPath": true,
			"allowUnsecure": false
		},
		"server": {
			"newHost": "localhost",
			"newPort": 1337,
			"path": "/validate",
			"https": false,
			"validateCert": false,
			"isSameServer": true,
			"ep": ["api"]
		}
	},
	"endpoints": [
		{
			"host": "@",
			"keepPath": true,
			"allowUnsecure": true
		},
		{
			"host": "admin.nigb.app",
			"keepPath": true,
			"allowUnsecure": true
		},
		{
			"host": "api.nigb.app",
			"keepPath": true,
			"allowUnsecure": true
		}
	]
}
